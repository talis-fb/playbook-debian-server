---
version: "3"
services:
  ombi:
    image: lscr.io/linuxserver/ombi:latest
    container_name: ombi
    environment:
      - PUID=1000
      - PGID=1000
      - TZ={{ timezone}}
    volumes:
      - {{ docker_services_dir }}/ombi/config:/config
    ports:
      - 3579:3579
    restart: unless-stopped