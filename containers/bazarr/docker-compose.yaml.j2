---
version: "2.1"
services:
  bazarr:
    image: lscr.io/linuxserver/bazarr:latest
    container_name: bazarr
    environment:
      - PUID=1000
      - PGID=1000
      - TZ={{ timezone }}
    volumes:
      - {{ docker_services_dir }}/bazarr/config:/config
      - {{ media_dir }}:/media
    ports:
      - 6767:6767
    restart: unless-stopped