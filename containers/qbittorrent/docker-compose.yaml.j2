---
version: "3"
services:
  qbittorrent:
    image: lscr.io/linuxserver/qbittorrent:latest
    container_name: qbittorrent
    environment:
      - PUID=1000
      - PGID=1000
      - TZ={{ timezone }}
      - WEBUI_PORT=13000
    volumes:
      - {{ docker_services_dir }}/qbittorrent/config:/config
      - {{ download_dir }}:/downloads
    ports:
      - 13000:13000
      - 6881:6881
      - 6881:6881/udp
    restart: unless-stopped