---
version: "3"
services:
  heimdall:
    image: lscr.io/linuxserver/heimdall:latest
    container_name: heimdall
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=America/Recife
    volumes:
      - {{ docker_data_dir }}/heimdall:/config
    ports:
      - 8080:80
      - 443:443
    restart: unless-stopped